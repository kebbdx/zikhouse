{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="registerBody">


		<h1>S'inscrire</h1>
		{# construction du formulaire d'inscription #}
		{{ form_start(registrationForm) }}


		{{ form_widget(registrationForm.last_name, { 'attr': {'class': 'form-control',
'placeholder': "Nom"} }) }}


		{{ form_widget(registrationForm.first_name, { 'attr': {'class': 'form-control',
'placeholder': "Prénom"} }) }}


		{{ form_widget(registrationForm.address, { 'attr': {'class': 'form-control',
'placeholder': "Adresse"} }) }}


		{{ form_widget(registrationForm.phone, { 'attr': {'class': 'form-control',
'placeholder': "Téléphone"} }) }}

		{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control',
'placeholder': "Email"} }) }}


		{{ form_widget(registrationForm.password, { 'attr': {'class': 'form-control',
'placeholder': "Mot de passe"} }) }}
		<div class="checkbox">
			{{ form_row(registrationForm.agreeTerms, {
				label: 'Accepter'
				})  }}
		</div>

		<button type="submit" class="btn">
			S'inscrire</button>
		{{ form_end(registrationForm) }}

	</div>
{% endblock %}
