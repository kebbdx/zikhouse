{% extends 'base.html.twig' %}

{% block body %}
	<div class="addBody">
		{% if is_granted('ROLE_ADMIN') %}


			<h3>Ajouter un article</h3>
			<div>
				{{ form_start(form_text) }}
				{{ form_row(form_text.title , { 'attr': {'class': 'form-control',
'placeholder': "Entrez le titre"} }) }}
				{{ form_row(form_text.text , { 'attr': {'class': 'form-control',
'placeholder': "Entrez le text"} }) }}

				<button type="submit" class="btn">
					Ajouter</button>


				{{ form_end(form_text) }}
			</div>


			<a href="{{ path('posts') }}">
				Liste des articles</a>


		{% else %}
			<h3>Vous n'avez pas acces Ã  cette page</h3>
		{% endif %}
	</div>
{% endblock %}
